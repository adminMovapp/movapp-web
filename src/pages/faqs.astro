   <script type="module">
      // Función para alternar los detalles
      const toggleDetail = (index) => {
         const detail = document.getElementById(`detail${index}`);
         const icon = document.getElementById(`icon${index}`);

         // Alternar la visibilidad del detalle
         detail.classList.toggle('hidden');

         // Cambiar el icono de '+' a '-' dependiendo del estado
         if (detail.classList.contains('hidden')) {
            icon.textContent = '+';
         } else {
            icon.textContent = '-';
         }
      };

      // Asignar el evento click para cada subtítulo
      document.getElementById('title0').addEventListener('click', () => toggleDetail(0));
      document.getElementById('title1').addEventListener('click', () => toggleDetail(1));
      document.getElementById('title2').addEventListener('click', () => toggleDetail(2));
      document.getElementById('title3').addEventListener('click', () => toggleDetail(3));
