---
import HamburgerIcon from '@assets/HamburgerIcon.astro';
import CloseIcon from '@assets/CloseIcon.astro';
---

<div class="md:hidden relative">
   <!-- Botón de menú hamburguesa -->
   <button
      id="menuButton"
      class="flex justify-center items-center w-8 h-8 gap-1 focus:outline-none"
      aria-label="Abrir menú"
   >
      <div id="hamburgerIcon" class="">
         <HamburgerIcon size={5} />
      </div>

      <div id="closeIcon" class="hidden">
         <CloseIcon size={5} />
      </div>
   </button>

   <!-- Menú desplegable -->
   <nav
      id="menuNav"
      class="absolute top-12 right-0 w-max bg-background_top/95 backdrop-blur-md shadow-lg rounded-lg p-4 flex flex-col gap-2 z-50 hidden"
   >
      <a href="/" class="text-white text-sm hover:text-text_banner">Inicio</a>
      <a href="/nosotros" class="text-white text-sm hover:text-text_banner">Movapp</a>
      <a href="/el-hack" class="text-white text-sm hover:text-text_banner">Hack</a>
      <a href="/tienda" class="text-white text-sm hover:text-text_banner">Tienda</a>

      <!-- Nuevas opciones dentro del menú principal -->
      <a href="/collaborations" class="text-white text-sm hover:text-text_banner">Colaboraciones</a>
      <a href="/faqs" class="text-white text-sm hover:text-text_banner">Preguntas frecuentes</a>
      <a href="/testimonials" class="text-white text-sm hover:text-text_banner">Testimonios</a>
      <a href="/mind" class="text-white text-sm hover:text-text_banner">Mente digital</a>
      <a href="/red" class="text-white text-sm hover:text-text_banner">Nuestras redes</a>
   </nav>
</div>

<script>
   // Obtenemos los elementos
   const menuButton = document.getElementById('menuButton');
   const hamburgerIcon = document.getElementById('hamburgerIcon');
   const closeIcon = document.getElementById('closeIcon');
   const menuNav = document.getElementById('menuNav');

   // Manejar el clic en el botón del menú
   menuButton.addEventListener('click', () => {
      // Alternamos el menú visible/oculto
      menuNav.classList.toggle('hidden');

      // Alternamos la visibilidad de los íconos
      hamburgerIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
   });
</script>
